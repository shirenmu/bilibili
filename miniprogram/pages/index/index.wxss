/* pages/index/index.wxss */
/* 首页导航 */
page{
  color:#666;
  width: 96%;
  margin:0 auto;
}

Mytitle{
  /* position: fixed; */
}

.tab {
  height: calc(100vh - 220rpx);
}

.scroll_container{
  white-space: nowrap;
  position: relative;
  padding: 5rpx 0;
  margin-bottom: 10rpx;

}
.nav_wrap{
  height: 100rpx;
}

.nav_item{
  padding:20rpx 45rpx;
  font-size: 28rpx;
  display: inline-block;
  transition: color .3s ease;
}


button{
  border: 1px solid #000;
}

.nav_item.active {
  color: #de688b;
  
}
.line {
  position: absolute;
  height: 5rpx;
  background: #de688b;
  bottom: 40rpx;
  transition: all .5s;
}
image{
  width: 100%;
  height: auto;
}

swiper{
  height: 220rpx;
  margin-bottom: 28rpx;
}




/* 视频列表  ------start  */

.video_wrap{
  display: flex;
  flex-wrap: wrap;
  padding:5rpx;
  justify-content: space-between
}

.video_item{
  width: 48%;
  margin-bottom: 20rpx;
}

.imgOuter image{
  border-radius: 14rpx
}

.videoTitle{
  font-size: 24rpx;
  display: -webkit-box;
  overflow: hidden;
  white-space: normal;
  text-overflow: ellipsis;
  word-break: break-word;
  /* 文字最多几行 */
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}


/* 视频列表 -------end    */


.tip{
  text-align: center;
  line-height: 100rpx;
  color:rgb(192, 192, 192)
}



